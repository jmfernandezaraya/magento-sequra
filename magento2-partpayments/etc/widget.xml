<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Sequra\Partpayments\Block\Widget\Teaser" id="sequra_partpayments_teaser">
        <label>Partpayments teaser</label>
        <description>Part Payments Simulator </description>
        <parameters>
            <parameter name="price_sel" sort_order="10" visible="true" xsi:type="text">
                <label>Price CSS Sel.</label>
            </parameter>
            <parameter name="dest_sel" sort_order="20" visible="true" xsi:type="text">
                <label>Place CSS Sel.</label>
                <description>Leave empty not to move it</description>
            </parameter>
            <parameter name="theme" sort_order="10" visible="true" xsi:type="text">
                <label>Theme</label>
                <description>L, R, minimal, legacy... or params in JSON format</description>
            </parameter>
        </parameters>
    </widget>
</widgets>